<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/png" href="/images/favicon.png" />
    <meta
      name="description"
      content="{{ metadata.defaultDescription | safe }}"
    />
    <meta property="og:locale" content="en_US" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="{{ title | safe }}" />
    <meta
      property="og:site_name"
      content="{{ metadata.defaultDescription | safe }}"
    />
    <meta property="og:url" content="{{ metadata.url | safe }}" />
    <meta
      property="og:image"
      content="{{ metadata.url | safe }}/images/ogimage.png"
    />
    <meta
      property="og:image:secure_url"
      content="{{ metadata.url | safe }}/images/ogimage.png"
    />
    <meta property="og:image:width" content="3072" />
    <meta property="og:image:height" content="2304" />
    <meta
      property="og:description"
      content="{{ metadata.defaultDescription | safe }}"
    />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="{{ title | safe }}" />
    <meta name="twitter:site" content="{{ metadata.url | safe }}" />
    <meta
      name="twitter:image"
      content="{{ metadata.url | safe }}/images/ogimage.png"
    />
    <meta name="twitter:creator" content="@tapman90" />
    <meta
      name="twitter:description"
      content="{{ metadata.defaultDescription | safe }}"
    />
    <!-- prettier-ignore -->
    {% block headScripts %}
    <!-- prettier-ignore -->
    {% endblock %}
    <!-- prettier-ignore -->
    {% block styles %}
    <link rel="stylesheet" href="/css/styles.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/pushbar.js@1.0.0/src/pushbar.min.css"
    />
    <!-- prettier-ignore -->
    {% endblock %}
    <title>{{ title }}</title>
  </head>
  <!-- prettier-ignore -->
  <body class="bg-gray-100">
    <button id="menu-button" class="hamburger">
      <div></div>
      <div></div>
      <div></div>
    </button>
    <nav data-pushbar-id="pushbar-menu" data-pushbar-direction="left" class="pt-12">
      <ul>
        <li><a class="block" href="/">Home</a></li>
        <li><a class="block" href="/about">About</a></li>
      </ul>
    </nav>
    <!-- prettier-ignore -->
    {% block body %}
    {{ content | safe }}
    <!-- prettier-ignore -->
    {% endblock %}
    <script src="https://cdn.jsdelivr.net/npm/pushbar.js@1.0.0/src/pushbar.min.js"></script>
    <script>
      const pushbar = new Pushbar({overlay: true});

      const NavMenu = function(menuButtonId, menuPushbarId) {
        this.$menuButton = document.getElementById(menuButtonId);
        this.menuPushbarId = menuPushbarId;
        this.isMenuOpen = false;
      }

      NavMenu.prototype.initialize = function() {
        this.$menuButton.addEventListener("click", () => {
          this.isMenuOpen = !this.isMenuOpen;
          if (this.isMenuOpen) {
            this.$menuButton.dataset.menuOpen = true;
            pushbar.open(this.menuPushbarId);
          } else { 
            delete this.$menuButton.dataset.menuOpen;
            pushbar.close(this.menuPushbarId);
          }
        })
      }

      const navMenu = new NavMenu("menu-button", "pushbar-menu");
      navMenu.initialize();
    </script>
    <script src="https://getinsights.io/js/insights.js"></script>
    <script>
    insights.init('vtskIcLapdZE4cLA');
    insights.trackPages();
    </script>
  </body>
</html>
